---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

const allPosts = [
  {
    title: "Building Scalable Web Applications",
    excerpt: "Exploring patterns and practices for creating applications that grow with your user base.",
    date: "Dec 15, 2024",
    readTime: "5 min read",
    link: "/blog/scalable-web-apps",
    category: "Architecture"
  },
  {
    title: "The Art of Clean Code",
    excerpt: "Why writing maintainable code is crucial for long-term project success.",
    date: "Dec 10, 2024",
    readTime: "3 min read",
    link: "/blog/clean-code",
    category: "Best Practices"
  },
  {
    title: "Modern State Management",
    excerpt: "Comparing different approaches to managing application state in 2024.",
    date: "Dec 5, 2024",
    readTime: "7 min read",
    link: "/blog/state-management",
    category: "Frontend"
  },
  {
    title: "Optimizing Database Queries",
    excerpt: "Techniques for improving database performance in production applications.",
    date: "Nov 28, 2024",
    readTime: "6 min read",
    link: "/blog/database-optimization",
    category: "Backend"
  },
  {
    title: "Introduction to WebAssembly",
    excerpt: "Getting started with WebAssembly and its use cases in modern web development.",
    date: "Nov 20, 2024",
    readTime: "8 min read",
    link: "/blog/webassembly-intro",
    category: "Technology"
  }
];
---

<Layout title="Blog - Buyun Wang">
  <Navigation />
  <main class="pt-32 pb-24 px-8 min-h-screen">
    <div class="max-w-7xl mx-auto">
      <div class="mb-16">
        <h1 class="text-5xl font-bold mb-4">Blog</h1>
        <p class="text-xl text-gray-600">Thoughts on development, design, and technology.</p>
      </div>
      
      <div class="grid gap-12 lg:grid-cols-2">
        {allPosts.map((post) => (
          <article class="group">
            <a href={post.link} class="block">
              <div class="mb-4">
                <div class="flex items-center gap-3 text-sm text-gray-500 mb-3">
                  <span class="px-2 py-1 bg-gray-100 rounded-md text-xs font-medium">{post.category}</span>
                  <span>{post.date}</span>
                  <span>•</span>
                  <span>{post.readTime}</span>
                </div>
                
                <h2 class="text-2xl font-semibold mb-3 group-hover:text-gray-600 transition-colors">
                  {post.title}
                </h2>
                
                <p class="text-gray-600 line-clamp-2">
                  {post.excerpt}
                </p>
              </div>
              
              <span class="text-sm font-medium text-gray-900 group-hover:text-gray-600 transition-colors">
                Read more →
              </span>
            </a>
          </article>
        ))}
      </div>
    </div>
  </main>
  <Footer />
</Layout>
