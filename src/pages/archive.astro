---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

const pastProjects = [
  {
    year: "Academic Projects",
    projects: [
      { 
        name: "Graphics Programming - Shading & Lighting", 
        tech: "JavaScript, GLSL, Three.js, WebGL", 
        link: "/projects/graphics",
        description: "Complete graphics programming portfolio with interactive demos",
        hasDetail: true
      },
      { 
        name: "DrinkSmart - Hydration App", 
        tech: "Java, GWT, AJAX, Google Maps API", 
        link: "/projects/drinksmart",
        description: "Find drinking fountains in Vancouver with ratings and reviews",
        hasDetail: true
      },
      { 
        name: "ShortCutters - Navigation UX", 
        tech: "Justinmind, Adobe Illustrator", 
        link: "/projects/shortcutters",
        description: "Crowdsourced navigation app with UX research and experiment design",
        hasDetail: true
      }
    ]
  },
  {
    year: "Professional & Startup",
    projects: [
      { 
        name: "DriveEarth (now Wever)", 
        tech: "FluidUI, HTML, CSS, JavaScript, Bootstrap", 
        link: "/projects/driveearth",
        description: "Carpooling app with gamification - European Innovation Academy",
        hasDetail: true
      },
      { 
        name: "Original Portfolio Site", 
        tech: "HTML, CSS, JavaScript, Bootstrap", 
        link: "/old-portfolio.html",
        description: "Previous version of this portfolio with modal-based project showcase"
      }
    ]
  }
];
---

<Layout title="Archive - Buyun Wang">
  <Navigation />
  <main class="pt-32 pb-24 px-8 min-h-screen">
    <div class="max-w-4xl mx-auto">
      <div class="mb-16">
        <h1 class="text-5xl font-bold mb-4">Archive</h1>
        <p class="text-xl text-gray-600">A collection of past projects and experiments.</p>
      </div>
      
      <div class="space-y-12">
        {pastProjects.map((yearGroup) => (
          <div>
            <h2 class="text-2xl font-semibold mb-6 text-gray-900">{yearGroup.year}</h2>
            <div class="space-y-4">
              {yearGroup.projects.map((project) => (
                <a 
                  href={project.link} 
                  class="block p-6 rounded-lg hover:bg-gray-50 transition-colors group border border-gray-100 hover:border-gray-200"
                  target={project.link.startsWith('http') ? '_blank' : '_self'}
                  rel={project.link.startsWith('http') ? 'noopener noreferrer' : undefined}
                >
                  <div class="flex justify-between items-start">
                    <div class="flex-1">
                      <h3 class="font-medium text-gray-900 group-hover:text-gray-600 transition-colors mb-2">
                        {project.name}
                      </h3>
                      {project.description && (
                        <p class="text-sm text-gray-600 mb-2">{project.description}</p>
                      )}
                      <p class="text-xs text-gray-500">{project.tech}</p>
                    </div>
                    <svg class="w-4 h-4 text-gray-400 opacity-0 group-hover:opacity-100 transition-opacity ml-4 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                    </svg>
                  </div>
                </a>
              ))}
            </div>
          </div>
        ))}
      </div>
      
      <div class="mt-16 pt-8 border-t border-gray-200">
        <p class="text-sm text-gray-500">
          Looking for something specific? Feel free to <a href="mailto:contact@example.com" class="underline hover:text-gray-700">reach out</a>.
        </p>
      </div>
    </div>
  </main>
  <Footer />
</Layout>
