---
const caseStudies = [
  {
    number: "01",
    title: "E-Commerce Platform",
    description: "A modern full-stack e-commerce solution with real-time inventory management and secure payment processing.",
    tags: ["React", "Node.js", "PostgreSQL"],
    link: "/case-studies/ecommerce",
    color: "from-blue-400 to-purple-600"
  },
  {
    number: "02",
    title: "Analytics Dashboard",
    description: "Real-time data visualization platform for tracking business metrics and KPIs with customizable widgets.",
    tags: ["TypeScript", "D3.js", "Python"],
    link: "/case-studies/analytics",
    color: "from-green-400 to-blue-600"
  },
  {
    number: "03",
    title: "Mobile App",
    description: "Cross-platform mobile application for task management with offline sync and push notifications.",
    tags: ["React Native", "Firebase", "Redux"],
    link: "/case-studies/mobile",
    color: "from-orange-400 to-red-600"
  }
];
---

<section id="work" class="py-24 px-8">
  <div class="max-w-7xl mx-auto">
    <h2 class="text-4xl font-bold mb-16">Case Studies</h2>
    
    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      {caseStudies.map((study) => (
        <a 
          href={study.link} 
          class="group relative bg-white rounded-2xl p-8 shadow-sm hover:shadow-xl transition-all duration-300 overflow-hidden"
        >
          <!-- Background Gradient on Hover -->
          <div class={`absolute inset-0 bg-gradient-to-br ${study.color} opacity-0 group-hover:opacity-5 transition-opacity duration-300`}></div>
          
          <!-- Content -->
          <div class="relative z-10">
            <span class="text-5xl font-bold text-gray-200 mb-4 block">{study.number}</span>
            
            <h3 class="text-xl font-semibold mb-3 group-hover:text-gray-900 transition-colors">
              {study.title}
            </h3>
            
            <p class="text-gray-600 mb-4 line-clamp-3">
              {study.description}
            </p>
            
            <div class="flex flex-wrap gap-2">
              {study.tags.map((tag) => (
                <span class="text-xs px-2 py-1 bg-gray-100 text-gray-700 rounded-md">
                  {tag}
                </span>
              ))}
            </div>
          </div>
          
          <!-- Arrow Icon -->
          <div class="absolute bottom-8 right-8 transform translate-x-2 opacity-0 group-hover:translate-x-0 group-hover:opacity-100 transition-all duration-300">
            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>
